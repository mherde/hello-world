package de.unikassel.ir.vsr;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.Iterator;
import java.util.List;
import java.util.Map;
import java.util.TreeSet;

public class PhraseSearchIndex extends InvertedIndexImpl implements PhraseSearch {

	@Override
	public Map<Document, List<Integer>> searchPhrase(List<String> phrase) {

		/* documents containing phrase */
		Map<Document, List<Integer>> result = new HashMap<>();

		/* ensuring phrase not to be null and phrase has at least one element */
		if (phrase == null || phrase.isEmpty())
			return result;

		List<Iterator<Pair>> lists = this.createSortedSets(phrase);

		if (lists.isEmpty()) {
			return result;
		}

		// for(TreeSet<Pair> list : lists){
		// for(Pair pair : list)
		// System.out.print(list);
		// System.out.println();
		// }

		Iterator<Pair> firstTerm = lists.get(0);

		while (firstTerm.hasNext()) {

			boolean match = true;

			Pair currentPair = null;

			for (int j = 1; j < lists.size(); j++) {
				Pair pair_j_1 = lists.get(j-1).hasNext() ? lists.get(j-1).next() : null;
				Pair pair_j = lists.get(j).hasNext() ? lists.get(j).next() : null;
				
				if(pair_j_1 == null || pair_j == null){
					break;
				}
				
				String dk_j_1 = pair_j_1.getDocument().toString();
				String dk_j = pair_j.getDocument().toString();
				
				int pk_j_1 = pair_j_1.getPosition();
				int pk_j = pair_j.getPosition();
				
				while(!(dk_j.compareTo(dk_j_1) > 0 || (dk_j.equals(dk_j_1) && pk_j >= pk_j_1 +1 ))){
					if(lists.get(j).hasNext()){
						pair_j = lists.get(j).next();
						pk_j = pair_j.getPosition();
						dk_j = pair_j.getDocument().toString();
					} else {
						match = false;
						break;
					}
				}

				if (!dk_j.equals(dk_j_1)
						|| pk_j != pk_j_1 + 1) {
					match = false;
					break;
				}
			}

			if (match && currentPair != null) {
				List<Integer> positions = result.getOrDefault(currentPair.getDocument(), new ArrayList<Integer>());
				positions.add(currentPair.getPosition());
				result.put(currentPair.getDocument(), positions);
			}
		}

		return result;

	}

	private List<Iterator<Pair>> createSortedSets(List<String> phrase) {

		List<Iterator<Pair>> lists = new ArrayList<>();

		for (String token : phrase) {

			token = token.toLowerCase();

			if (tokenHash.get(token) == null) {
				lists = new ArrayList<>();
				break;
			}

			TreeSet<Pair> sortedSet = new TreeSet<>();

			for (TokenOccurrence occ : tokenHash.get(token).getTokenOccurrenceList()) {
				for (int position : occ.getPositions()) {
					sortedSet.add(new Pair(occ.getDocument(), position));
				}
			}

			lists.add(sortedSet.iterator());
		}
		
		return lists;

	}

	private class Pair implements Comparable<Pair> {

		private Document doc;
		private int position;

		public Pair(Document doc, int position) {
			this.doc = doc;
			this.position = position;
		}

		public Document getDocument() {
			return this.doc;
		}

		public int getPosition() {
			return this.position;
		}

		@Override
		public int compareTo(Pair o) {
			int comp = this.getDocument().getId().compareTo(o.getDocument().getId());
			if (comp != 0) {
				return comp;
			} else {
				return this.getPosition() > o.getPosition() ? +1 : this.getPosition() < o.getPosition() ? -1 : 0;
			}
		}

		@Override
		public String toString() {
			return "(" + this.getDocument().getId() + ", " + this.getPosition() + ")";
		}

	}

	public PhraseSearchIndex(Corpus corpus) {
		super(corpus);
	}

	@Override
	public Map<Document, List<Integer>> searchPhrase(String phrase) {

		String[] terms = phrase.trim().split("\\s+");

		return this.searchPhrase(Arrays.asList(terms));

	}

	@Override
	public List<String> getContext(String phrase, Document doc, int pos) {
		// TODO Auto-generated method stub
		return null;
	}

}
